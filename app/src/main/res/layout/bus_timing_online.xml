<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/darker_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ðŸ”¹ Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bus_timing_details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="12dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginBottom="12dp"/>

        <!-- ðŸ”¹ Dynamic Details -->
        <TextView
            android:id="@+id/tv_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/district"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_taluk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/taluk"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_bus_stand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bus_stand"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/route"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tv_bus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bus_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginBottom="10dp"/>

        <!-- ðŸ”¹ Table Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/black"
            android:padding="8dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stop_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/predicted_time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/actual_time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>

        <!-- ðŸ”¹ Table Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:fillViewport="true"
            android:padding="8dp"
            android:minHeight="250dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:stretchColumns="*"/>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_refresh_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Data"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@android:color/holo_blue_dark"/>
    </LinearLayout>
</ScrollView>
